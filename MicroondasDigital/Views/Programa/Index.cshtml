@{
    ViewBag.Title = "Home Page";
}

@model IEnumerable<MicroondasDigital.Models.Programa>

<div class="row">
    <div class="col-lg-12">
        <div class="container">
            <div class="panel panel-default">
                <div class="panel-heading"><h3 class="text-center">NOVO PROGRAMA</h3></div>
                <div class="panel-body">
                    @using (Html.BeginForm("NovoPrograma", "Programa", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label for="nome">Nome</label>
                                    <input type="text" class="form-control" name="nome" id="nome" />
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label for="instrucao">Instruções</label>
                                    <input type="text" class="form-control" name="instrucao" id="instrucao" />
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label for="tempo">Tempo de cozinhamento</label>
                                    <input type="text" class="form-control" name="tempo" id="tempo" />
                                    <small class="form-text text-muted">Min: 1seg - Max: 2min</small>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-2">
                                <div class="form-group">
                                    <label for="potencia">Potência</label>
                                    <select name="potencia" id="potencia" class="form-control">
                                        @for (int i = 1; i <= 10; i++)
                                        {
                                            <option value="@i">@i</option>
                                        }
                                    </select>
                                    <small class="form-text text-muted">Min: 1 - Max: 10</small>
                                </div>
                            </div>
                            <div class="col-lg-1">
                                <div class="form-group">
                                    <label for="caracter">Caracter</label>
                                    <input type="text" class="form-control" name="caracter" id="caracter" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-2 col-lg-offset-5" style="margin-top: 1.8em">
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary">Confirmar</button>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            @if (ViewData.ModelState.Keys.Any(k => ViewData.ModelState[k].Errors.Any()))
                            {
                            <div class="alert alert-danger">
                                <button class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                            </div>
                            }
                        </div>

                    }
                </div>

                <div class="panel panel-default">
                    <div class="panel-body">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Nome</th>
                                    <th>Instrução</th>
                                    <th>Tempo</th>
                                    <th>Potência</th>
                                    <th>Caracter</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.nome</td>
                                            <td>@item.instrucao</td>
                                            <td>@item.tempo</td>
                                            <td>@item.potencia</td>
                                            <td>@item.caracter</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="5" class="text-center">Nenhum programa disponível</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>


            </div>
        </div>
    </div>
</div>

